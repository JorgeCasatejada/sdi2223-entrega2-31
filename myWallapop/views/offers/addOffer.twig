{% extends "layout.twig" %}
{% block title %} Agregar oferta {% endblock %}
{% block main_container %}
  <h2>Agregar oferta</h2>
  <form class="form-horizontal" method="post" action="/offer/add">
    <div class="form-group">
      <label class="control-label col-sm-2" for="title">Título:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="title" name="title" placeholder="Título de la oferta" required/>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="description">Descripción:</label>
      <div class="col-sm-10">
        <textarea id="description" name="description" rows="4" cols="130"></textarea>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="price">Precio (€):</label>
      <div class="col-sm-10">
        <input type="number" step="0.01" id="price" class="form-control" name="price"
               placeholder="2.50" required/>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary">Agregar oferta</button>
      </div>
    </div>
  </form>
{% endblock %}