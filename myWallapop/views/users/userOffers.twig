{% extends "layout.twig" %}
{% block title %} Mis ofertas {% endblock %}
{% block main_container %}
  <h2>Listado de ofertas</h2>
  <div class="table-responsive">
{#    <form action="/admin/delete" method="post">#}
{#      <input type="submit" id="deleteButton" class="btn btn-danger" value="Eliminar"/>#}
      <table class="table table-hover">
        <thead>
        <tr>
          <th>Titulo</th>
          <th>Descripción</th>
          <th>Fecha de publicación</th>
          <th>Cantidad (€)</th>
          <th class="col-md-1"></th>
        </tr>
        </thead>
        <tbody>
        {% for offer in response.offers %}
            <tr>
              <td>{{ offer.title }}</td>
              <td>{{ offer.description }}</td>
              <td>{{ offer.date }}</td>
              <td>{{ offer.price }}</td>
            </tr>
        {% endfor %}
        </tbody>
      </table>
{#    </form>#}
  </div>
  <!-- Paginación mostrar la actual y 2 anteriores y dos siguientes -->
  <div class="row text-center">
    <ul class="pagination">
      {% for page in response.pages %}
        <li class="page-item" id="pi-{{ page }}">
          <a class="page-link" href="/users/?page={{ page }}"> {{ page }} </a>
        </li>
      {% endfor %}
      <script>
        $("#pi-" + "{{ currentPage }}").addClass("active");
      </script>
    </ul>
  </div>
{% endblock %}